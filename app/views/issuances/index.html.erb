
<div class="page-header">
  <h1>Transactions <small><%= page_entries_info @issuances %></small></h1><p class="pull-right"><%= link_to 'Add', new_issuance_path, class: "btn btn-primary btn-sm" %></p>
</div>
  
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-hover info-list">
          <thead>
            <tr>
            <th>Transaction No</th>
             <th>Employee</th>
             <th>Tool</th>
             <th>Issued At</th>
             <th>Due Date</th>
             <th>Returned At</th>
             <th>Quantity</th>
            </tr>
          </thead>

          <tbody>
            <% @issuances.each do |issuance| %>
              <tr>
              	<td><%= issuance.id %></td>
                <td><%= issuance.employee_id %></td>
                <td><%= issuance.tool_id %></td>
                <td><%= issuance.issued_at %></td>
                <td><%= issuance.due_date %></td>
                <td><%= issuance.returned_at%></td>
                <td><%= issuance.quantity %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

<%= link_to 'Issue Tool', new_issuance_path, class: "btn btn-primary btn-sm" %> <%= link_to 'Tool Return', new_issuance_path, class: "btn btn-default btn-sm" %>
<p><%= paginate @issuances, :theme => 'twitter-bootstrap-3' %></p>
