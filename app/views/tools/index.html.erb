<h4>Tools</h4>

<table class="table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Tags</th>
      <th>Description</th>
      <th>Inventory Type</th>
      <th>Location</th>
      <th>Stock Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td><%= image_tag tool.image.url(:thumb) %></td>
        <td><%= raw tool.tag_list.map { |t| link_to t, tag_path(t)}.join(', ') %></td>
        <td><%= tool.description %></td>
        <td><%= tool.inventory_type %></td>
        <td><%= tool.location_id %></td>
        <td></td>
        <td><%= link_to 'Show', tool %></td>
        <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
        <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add', new_tool_path, class: "button" %>
