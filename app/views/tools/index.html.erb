<div class="page-header">
  <h1>Tools<small><%= page_entries_info @tools %></small></h1>  <p class="pull-right"><%= link_to 'Add', new_tool_path, class: "btn btn-primary btn-sm" %></p>

</div>
  
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-hover info-list">
          <thead>
            <tr>
            	<th>Image</th>
              <th>Tags</th>
              <th>Barcode ID</th>
              <th>Description</th>
              <th>Quantity</th>
              <th>On Hand</th>
            </tr>
          </thead>

          <tbody>
            <% @tools.each do |tool| %>
              <tr>
                <td><%= image_tag tool.image.url(:thumb) %></td>
                <td><%= raw tool.tag_list.map { |t| link_to t, tag_path(t)}.join(', ') %></td>
                <td><%= tool.barcode %></td>
                <td><%= tool.description %></td>
                <td><%= tool.quantity %></td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

<p><%= paginate @tools, :theme => 'twitter-bootstrap-3' %></p>
